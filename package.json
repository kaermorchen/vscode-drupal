{
  "name": "vscode-drupal",
  "displayName": "Drupal",
  "description": "A Drupal extension for VS Code",
  "version": "0.0.0",
  "publisher": "",
  "repository": "",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Drupal",
        "properties": {
          "vscode-drupal.trace.server": {
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server. This setting is helpful for debugging."
          }
        }
      },
      {
        "title": "PHP_CodeSniffer",
        "properties": {
          "vscode-drupal.diagnostics.phpcs.enabled": {
            "order": 1,
            "scope": "resource",
            "type": "boolean",
            "default": true,
            "markdownDescription": "Whether [PHP_CodeSniffer](https://github.com/squizlabs/PHP_CodeSniffer) is enabled."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^18.11.15",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-uri": "^3.0.7"
  }
}
