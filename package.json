{
  "name": "vscode-drupal",
  "displayName": "Drupal",
  "description": "A Drupal extension for VS Code",
  "version": "0.0.0",
  "publisher": "stanislav",
  "repository": "https://github.com/kaermorchen/vscode-drupal",
  "author": "Stanislav Romanov <kaermorchen@gmail.com>",
  "engines": {
    "vscode": "^1.74.0"
  },
  "keywords": [
    "Drupal"
  ],
  "icon": "assets/logo.png",
  "license": "MIT",
  "categories": [
    "Linters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "drupal.search-api",
        "title": "Search Drupal API"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "drupal.search-api"
        }
      ]
    },
    "icons": {
      "drupal-logo": {
        "description": "Drupal logo",
        "default": {
          "fontPath": "./assets/icons.woff",
          "fontCharacter": "\\E900"
        }
      }
    },
    "languages": [
      {
        "id": "php",
        "extensions": [
          ".engine",
          ".inc",
          ".install",
          ".module",
          ".php",
          ".profile",
          ".sh",
          ".test",
          ".theme"
        ]
      }
    ],
    "configurationDefaults": {
      "search.exclude": {
        "/composer.lock": true
      }
    },
    "configuration": [
      {
        "title": "Drupal",
        "properties": {
          "drupal.phpcs.enabled": {
            "order": 10,
            "scope": "resource",
            "type": "boolean",
            "default": true,
            "markdownDescription": "Enables [phpcs](https://github.com/squizlabs/PHP_CodeSniffer) checker"
          },
          "drupal.phpcs.executablePath": {
            "order": 11,
            "scope": "resource",
            "type": "string",
            "default": "vendor/bin/phpcs",
            "markdownDescription": "Path to phpcs"
          },
          "drupal.phpcs.args": {
            "order": 12,
            "scope": "resource",
            "type": "array",
            "default": [
              "--standard=Drupal,DrupalPractice"
            ],
            "markdownDescription": "[Argument list](https://github.com/squizlabs/PHP_CodeSniffer/wiki/Usage) of phpcs"
          },
          "drupal.phpcbf.enabled": {
            "order": 20,
            "scope": "resource",
            "type": "boolean",
            "default": true,
            "markdownDescription": "Enables [phpcbf](https://github.com/squizlabs/PHP_CodeSniffer) code formatter"
          },
          "drupal.phpcbf.executablePath": {
            "order": 21,
            "scope": "resource",
            "type": "string",
            "default": "vendor/bin/phpcbf",
            "markdownDescription": "Path to phpcbf"
          },
          "drupal.phpcbf.args": {
            "order": 22,
            "scope": "resource",
            "type": "array",
            "default": [
              "--standard=Drupal,DrupalPractice"
            ],
            "markdownDescription": "[Argument list](https://github.com/squizlabs/PHP_CodeSniffer/wiki/Fixing-Errors-Automatically) of phpcbf"
          },
          "drupal.phpstan.enabled": {
            "order": 30,
            "scope": "resource",
            "type": "boolean",
            "default": true,
            "markdownDescription": "Enables [phpstan](https://phpstan.org/) analyse"
          },
          "drupal.phpstan.executablePath": {
            "order": 31,
            "scope": "resource",
            "type": "string",
            "default": "vendor/bin/phpstan",
            "markdownDescription": "Path to phpstan"
          },
          "drupal.phpstan.args": {
            "order": 32,
            "scope": "resource",
            "type": "array",
            "default": [],
            "markdownDescription": "[Argument list](https://phpstan.org/user-guide/command-line-usage) of phpstan"
          },
          "drupal.trace.server": {
            "order": 100,
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server. This setting is helpful for debugging."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "rm -rf ./out && tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/gettext-parser": "^4.0.2",
    "@types/node": "^18.11.15",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "doc-parser": "^0.4.9",
    "gettext-parser": "^6.0.0",
    "php-parser": "^3.1.2",
    "vscode-uri": "^3.0.7",
    "yaml": "^2.2.0"
  }
}
