{
  "name": "vscode-drupal",
  "displayName": "Drupal",
  "description": "A Drupal extension for VS Code",
  "version": "0.0.0",
  "publisher": "",
  "repository": "",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "php",
        "extensions": [
          ".engine",
          ".inc",
          ".install",
          ".module",
          ".php",
          ".profile",
          ".sh",
          ".test",
          ".theme"
        ]
      }
    ],
    "configuration": [
      {
        "title": "Drupal",
        "properties": {
          "drupal.trace.server": {
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server. This setting is helpful for debugging."
          }
        }
      },
      {
        "title": "PHP_CodeSniffer",
        "properties": {
          "drupal.diagnostics.phpcs.enabled": {
            "order": 1,
            "scope": "resource",
            "type": "boolean",
            "default": true,
            "markdownDescription": "Enables [PHP_CodeSniffer](https://github.com/squizlabs/PHP_CodeSniffer)"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^18.11.15",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "doc-parser": "^0.4.9",
    "php-parser": "^3.1.2",
    "vscode-uri": "^3.0.7",
    "yaml": "^2.2.0"
  }
}
